@model TennisApplication.Dtos.Tournament.TournamentCreateDto
@{
    if (Model != null)
    {
        ViewData["Title"] = "Edit tournament";
    }
    else
    {
        ViewData["Title"] = "Create new tournament";
    }
}
@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
<html>
<body>

@using (Html.BeginForm("CreateTournament", "Tournament", FormMethod.Post, new
{
    @class="text-center border border-light w-50 p-3"
}))
{
    if (Model != null)
    {
        <p class="h4 mb-4">Edit tournament</p>
        @Html.HiddenFor(t => t.Id)
    }
    else
    {
        <p class="h4 mb-4">Create new tournament</p>
    }

    <div class="form-group">
        <div class="form-row mb-4">
            @Html.Label("Name of the tournament")
            @Html.TextBoxFor(t => t.Name, new
            {
                required = string.Empty,
                @class = "form-control", placeholder = "Enter tournament name"
            })
       
        </div>
    </div>
    <div class="form-group">
        <div class="form-row mb-4">
            @Html.Label("Tournament address")
            @Html.TextBoxFor(t => t.Place, new
            {
                required = string.Empty,
                @class = "form-control", placeholder = "Enter tournament address"
            })
        </div>
    </div>
    <div class="form-group">
        <div class="form-row mb-4">
            @Html.Label("Date of the tournament")
            @if (Model != null)
            {
                @Html.EditorFor(model => model.Date, new
                {
                    htmlAttributes = new {@class = "form-control"}
                })
            }
            else
            {
                @Html.EditorFor(model => model.Date, new
                {
                    htmlAttributes = new {required = string.Empty, @class = "form-control"}
                })
            }
        </div>
    </div>
    <div class="form-group">
        <div class="form-row mb-4">
            @Html.Label("Draw size")
            @Html.TextBoxFor(t => t.DrawSize, new
            {
                type = "number", 
                required = string.Empty,
                @class = "form-control", 
                placeholder = "Enter draw size"
            })
            @Html.ValidationMessageFor(t => t.DrawSize, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
                @if (Model != null)
                {
                    <input type="submit" class="btn btn-info my-4 btn-block" value="Edit tournament">   
                }
                else
                {
                    <input type="submit" class="btn btn-info my-4 btn-block" value="Create tournament">   
                }
        
    </div>

}

</body>
</html>