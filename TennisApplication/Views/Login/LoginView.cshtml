@model TennisApplication.Dtos.User.UserReadDto

@{
    ViewData["Title"] = "Login";
}
<body>
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="col-md-12 border border-light p-5">
                @using (Html.BeginForm("LoggedIn", "Login", FormMethod.Post))
                {
                    <h3 class="text-center text-info">Sign in</h3>
                    <div class="form-group">
                        @Html.TextBoxFor(u => u.EMail, new
                        {
                            required = string.Empty,
                            @class = "form-control mb-3",
                            placeholder = "E-mail",
                            style="border-color: #17a2b8"
                        })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(u => u.Password, new
                        {
                            required = string.Empty,
                            @class = "form-control mb-3",
                            placeholder = "Password",
                            style="border-color: #17a2b8"
                        })
                                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <span class="text-danger">
                                @ViewData.ModelState["WrongEMailOrPassword"].Errors[0].ErrorMessage
                            </span>
                        }
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info my-4 btn-block" style="border-radius: 10px" value="Sign in">
                    </div>
                    <div id="register-link" class="text-right">
                        <a href="@Url.Action("RegisterView", "Register")" class="text-info">Register here</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
</body>