@using TennisApplication.Dtos.User
@using Microsoft.AspNetCore.Http
@using TennisApplication.Others
@inject IHttpContextAccessor HttpContextAccessor
@{
    DeserializeUser deserializable = new DeserializeUser(new HttpContextAccessor());
    UserReadDto loggedUser = deserializable.GetLoggedUser();
}
<li class="nav-item dropdown">

    <a class="nav-link dropdown" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Tournament
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

        @if (loggedUser != null && loggedUser.Role.Equals(Role.TournamentDirector))
        {
            <a class="dropdown-item" asp-area="" asp-controller="Tournament" asp-action="CreateTournamentView">Create tournament</a>
        }
        <a class="dropdown-item" asp-area="" asp-controller="Tournament" asp-action="GetAllTournaments">All tournaments</a>


        <a class="dropdown-item" asp-area="" asp-controller="CourseTournament" asp-action="CompletedTournamentView">Completed tournaments</a>


        <a class="dropdown-item" asp-area="" asp-controller="Tournament" asp-action="GetIncomingTournament">Incoming tournaments</a>

        <a class="dropdown-item" asp-area="" asp-controller="CourseTournament" asp-action="OngoingAllView">Ongoing tournaments</a>

    </div>
</li>